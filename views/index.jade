extend layout

block content
  div.newsfeed-wrapper
    
    ul
      li.form-wrapper
        div.row-fluid
          div.col-md-4
            div.result(id="soundcloud-result")
          div.col-md-4
            div.result(id="youtube-result")
          div.col-md-4
            div.result(id="spotify-result")
        form(action='/search', method='post', id='search-form', class='text-center')
          input(name='query', type='text',autofocus,placeholder='Enter something to search for')
          div.submit-wrapper
            input(type='submit', class='btn btn-primary')
      li.select-wrapper
        div.row
          div.col-md-11.selected
          div.col-md-1.post-wrapper
            div.btn.btn-primary(id="post-button")
              | post

